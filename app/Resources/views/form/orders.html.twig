{% extends 'base.html.twig' %}

{% block body %}

<h2>UÅ¾sakymai</h2>

<section class="col-sm-12">
  {{ render(controller('AppBundle:Order:search'))}}
</section>

<table class="table table-hover">
	<thead>
    <tr class="text-center">
	    <th>{{ knp_pagination_sortable(bookorders, 'Nr.', 'bp.id') }}</th>
		  <th>{{ 'form.labels.firstname'|trans({}, 'messages') }}</th>
      <th>{{ 'form.labels.lastname'|trans({}, 'messages') }}</th>
      <th>{{ 'form.labels.email'|trans({}, 'messages') }}</th>
      <th>{{ 'form.labels.phone'|trans({}, 'messages') }}</th>
		  <th>{{ 'form.labels.address'|trans({}, 'messages') }}</th>
      <th>{{ 'form.labels.city'|trans({}, 'messages') }}</th>
      <th>{{ 'form.labels.postalcode'|trans({}, 'messages') }}</th>
      <th>{{ 'form.labels.isbn'|trans({}, 'messages') }}</th>
		</tr>
  </thead>
	<tbody>
	{% for key in bookorders %}
	  <tr class="text-center">
  		<td>{{ key.id }}.</td>
      <td>{{ key.firstname }}</td>
      <td>{{ key.lastname }}</td>
      <td class="lowercase">{{ key.email }}</td>
  		<td>{{ key.phone }}</td>
      <td>{{ key.address }}</td>
      <td>{{ key.city }}</td>
      <td>{{ key.postalcode }}</td>
      <td>{{ key.isbn }}</td>
    </tr>
	{% endfor %}
	</tbody>
</table>
   <div class="order-pagination">
     {{ knp_pagination_render(bookorders) }}
   </div>
{% endblock %}
